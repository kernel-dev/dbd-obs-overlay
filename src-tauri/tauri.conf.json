{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "obs-overlay-tauri",
  "version": "0.1.0",
  "identifier": "com.kerneldev.dbdobs",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "editor",
        "title": "Editor",
        "width": 1440,
        "height": 1080,
        "resizable": true,
        "url": "src/index.html",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../resources/config/*": "resources/config"
    }
  }
}
